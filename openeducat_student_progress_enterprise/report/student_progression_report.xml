<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="student_progression_report">
            <style>
                .font{
                font-size:14px;
                font-family:"Helvetica"
                }
                @page{
                margin-top:1%;
                size: A4;
                }
            </style>
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="font">
                        <div class="page">
                            <t t-foreach="docs" t-as="objs">
                                <div class="row text-center">
                                    <div class="col-md-12">
                                        <h4 style="width:100%;">
                                            <strong>
                                                Student Progression Report
                                            </strong>
                                        </h4>
                                    </div>
                                </div>
                                <div class="row mt32 progression">
                                    <div class="col-md-12 ">
                                        <div class="row col-6" style="float:left;">
                                            <div class="col-7">
                                                <strong>Progression No:</strong>
                                            </div>
                                            <div class="col-5">
                                                <span t-esc="objs.name"/>
                                            </div>
                                        </div>
                                        <div class="row col-6" style="float:right;">
                                            <div class="col-6">
                                                <strong>Student:</strong>

                                            </div>
                                            <div class="col-6">
                                                <span t-esc="objs.student_id.name"/>
                                            </div>
                                        </div>
                                        <div class="row col-6" style="float:left;">
                                            <div class="col-7">
                                                <strong>Date:</strong>
                                            </div>
                                            <div class="col-7">
                                                <span t-esc="objs.date" t-options="{'widget':'date'}"/>
                                            </div>
                                        </div>
                                        <div class="row col-6" style="float:right;">
                                            <div class="col-6">
                                                 <strong>Created By:</strong>
                                            </div>
                                            <div class="col-6">
                                                 <span t-esc="objs.created_by.name"/>
                                            </div>
                                        </div>
                                        <div class="row col-6" style="float:left;">
                                            <div class="col-7">
                                                <strong>Status:</strong>
                                            </div>
                                            <div class="col-5">
                                                <span t-esc="{false:false, 'draft':'Draft',
                                                                        'open':'In Progress', 'done':'Done', 'cancel':'Cancel'}[objs.state]"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p style="page-break-after: always;"></p>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
