<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_student_progresssion" name="Portal My Home : student progression"
              inherit_id="portal.portal_my_home"
              priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="user_id.sudo().is_parent or user_id.sudo().is_student" t-call="portal.portal_docs_entry">
                <t t-set="title">Student Progression</t>

                <t t-if="is_parent">
                    <t t-set="url" t-value="'/student/progression/'+ student_id"/>
                </t>
                <t t-else="is_student">
                    <t t-set="url" t-value="'/student/progression/'"/>
                </t>
            </t>
        </xpath>
    </template>

    <template id="openeducat_student_progression_portal_data">
        <t t-call="portal.portal_layout">

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Student Progression</t>
            </t>
            <t t-if="not progression">
                <p>There are currently no information for your account!!!</p>
            </t>

            <div t-if="progression" style="background-color:white; padding: 20px 40px 20px 40px;">
                <div class="mt16">
                    <div t-if="progression.student_id" class="row col-md-12">
                        <div class="row col-md-6" style="padding-left:0;font-size: 16px;">
                            <div t-if="progression.name" class="col-md-6">
                                <b>Progression No:</b>
                            </div>
                            <div t-if="progression.name" class="col-md-6">
                                <span t-esc="progression.name"/>
                            </div>
                            <div t-if="progression.date" class="col-md-6">
                                <b>Date:</b>
                            </div>
                            <div t-if="progression.date" class="col-md-6">
                                <span t-esc="progression.date" t-options="{'widget': 'date'}"/>
                            </div>
                        </div>
                        <div class="row col-md-6" style="font-size: 16px;">
                            <div t-if="progression.state" class="col-md-6">
                                <b>Status:</b>
                            </div>
                            <div t-if="progression.state" class="col-md-6">
                                <span t-esc="{false:false, 'draft':'Draft',
                                'open':'In Progress', 'done':'Done', 'cancel':'Cancel'}[progression.state]"/>
                            </div>
                            <div t-if="progression.name" class="col-md-6">
                                <b>Created By:</b>
                            </div>
                            <div t-if="progression.created_by" class="col-md-6">
                                <span t-esc="progression.created_by.name"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt16 mb8 progression_list" style="font-size: 16px">
                    <b>Progression Details:</b>
                </div>
            </div>
        </t>
    </template>

</odoo>