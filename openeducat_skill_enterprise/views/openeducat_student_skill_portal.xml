<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="student_portal_student_skill"
              inherit_id="openeducat_core_enterprise.openeducat_enterprise_student_portal"
              priority="60">
        <xpath expr="//div[@name='student_portal_div']" position="inside">
            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="#" data-toggle="collapse" data-parent="#accordion" data-target="#skill">
                            <h4 class="border panel-title">
                                Skills
                                <span style="float:left;padding: 0 20px 0 20px;">+</span>
                            </h4>
                        </a>
                    </div>
                    <div id="skill" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <div t-if="user_id.sudo().is_student" class="col-md-2 mt16">
                                <a t-attf-href="/student/skill">
                                    <button>
                                        Add Your Skill
                                    </button>
                                </a>
                            </div>
                            <table class="mt16 table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Skill</th>
                                        <th>Rating</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="student.skill_line" t-as="skill">
                                        <tr>
                                            <td>
                                                <span t-esc="skill.skill_type_id.name"/>
                                            </td>
                                            <td>
                                                <span t-esc="skill.rating"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>