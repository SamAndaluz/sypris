<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_skill_tree" model="ir.ui.view">
            <field name="name">op.skill.tree</field>
            <field name="model">op.skill</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Skill">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="skill_category_type_id"/>
                </tree>
            </field>
        </record>

        <record id="view_op_skill_form" model="ir.ui.view">
            <field name="name">op.skill.form</field>
            <field name="model">op.skill</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Skill">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="code"/>
                            </group>
                        </group>
                        <group>
                            <field name="skill_category_type_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_op_skill_search" model="ir.ui.view">
            <field name="name">op.skill.search</field>
            <field name="model">op.skill</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Skill">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_skill_view">
            <field name="name">Skills</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.skill</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_op_skill_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_skill_view_form">
            <field name="act_window_id" ref="act_open_op_skill_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_skill_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_skill_view_tree">
            <field name="act_window_id" ref="act_open_op_skill_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_skill_tree"/>
        </record>
    </data>
</odoo>
