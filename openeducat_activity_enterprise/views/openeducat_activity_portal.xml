<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="Enterprise_student_activity_portal"
              inherit_id="openeducat_core_enterprise.openeducat_enterprise_student_portal"
              priority="30">
        <xpath expr="//div[@name='student_portal_div']" position="inside">
            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="#" data-toggle="collapse" data-parent="#accordion" data-target="#activity">
                            <h4 class="border panel-title">
                                Activity Log
                                <span style="float:left;padding: 0 20px 0 20px;">+</span>
                            </h4>
                        </a>
                    </div>
                    <div id="activity" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <table class="mt16 table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Activity Type</th>
                                        <th>Date</th>
                                        <th>Faculty</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="student.activity_log" t-as="activity_data">
                                        <tr>
                                            <td>
                                                <span t-esc="activity_data.type_id.name"/>
                                            </td>
                                            <td>
                                                <span t-esc="activity_data.date"/>
                                            </td>
                                            <td>
                                                <span t-esc="activity_data.faculty_id.name"/>
                                            </td>

                                            <td>
                                                <span t-esc="activity_data.description"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>