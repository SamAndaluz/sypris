<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="student_progression_activity_portal_inherit"
              inherit_id="openeducat_student_progress_enterprise.openeducat_student_progression_portal_data"
              priority="60">

        <xpath expr="//div[hasclass('progression_list')]" position="after">
            <div t-if="progression.activity_lines" class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="#" data-toggle="collapse" data-parent="#accordion" data-target="#activity">
                            <h5 class="border panel-title">
                                Activity
                                <strong style="float:left;padding: 0 20px 0 20px;">+</strong>
                            </h5>
                        </a>
                    </div>
                    <div id="activity" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <div t-if="progression.activity_lines">
                                <table t-if="progression.activity_lines" class="mt8 table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Activity Type</th>
                                            <th>Faculty</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="progression.activity_lines.sorted(key=lambda record: record.date, reverse=False)"
                                           t-as="activity_data">
                                            <tr>
                                                <td>
                                                    <span t-esc="activity_data.date" t-options="{'widget':'date'}"/>
                                                </td>
                                                <td>
                                                    <span t-esc="activity_data.type_id.name"/>
                                                </td>
                                                <td>
                                                    <span t-esc="activity_data.faculty_id.name"/>
                                                </td>

                                                <td>
                                                    <span t-esc="activity_data.description"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
