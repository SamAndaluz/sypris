<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="student_portal_job_post_detail"
              inherit_id="openeducat_core_enterprise.openeducat_enterprise_student_portal"
              priority="20">
        <xpath expr="//div[@name='student_portal_div']" position="inside">
            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="#" data-toggle="collapse" data-parent="#accordion" data-target="#job_post">
                            <h4 class="border panel-title">
                                Job Post Detail
                                <span style="float:left;padding: 0 20px 0 20px;">+</span>
                            </h4>
                        </a>
                    </div>
                    <div id="job_post" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <table class="mt16 table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Application Number</th>
                                        <th>Job Post</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="student.job_post_ids" t-as="job">
                                        <tr>
                                            <td>
                                                <span t-esc="job.name"/>
                                            </td>
                                            <td>
                                                <span t-esc="job.post_id.name"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>