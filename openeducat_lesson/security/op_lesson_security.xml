<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.rule" id="backoffice_lesson_rule">
            <field name="name">Backoffice Lesson Rule</field>
            <field name="model_id" ref="model_op_lesson"/>
            <field name="groups"
                eval="[(4, ref('openeducat_core.group_op_back_office'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record model="ir.rule" id="faculty_lesson_rule">
            <field name="name">Faculty Lesson Rule</field>
            <field name="model_id" ref="model_op_lesson"/>
            <field name="groups"
                 eval="[(4, ref('openeducat_core.group_op_faculty'))]"/>
            <field name="domain_force">[('faculty_id.user_id', '=', user.id)]</field>
        </record>

        <record model="ir.rule" id="student_lesson_rule">
            <field name="name">Student Lesson Rule</field>
            <field name="model_id" ref="model_op_lesson"/>
            <field name="groups"
                 eval="[(4, ref('openeducat_core.group_op_back_office_admin')),(4, ref('openeducat_parent.group_op_parent'))]"/>
            <field name="domain_force">['|', ('session_ids.user_ids', 'in', user.ids), ('session_ids.user_ids', 'in', user.child_ids.ids)]</field>
        </record>
    </data>
</odoo>