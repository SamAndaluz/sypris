<?xml version="1.0"?>
<odoo>
    <data>
        <record id="op_faculty_user_create_view" model="ir.ui.view">
            <field name="name">op.meeting.wizard.form</field>
            <field name="model">op.meeting.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Meeting Event">
                    <separator string="Are You Sure You Want To Create Meeting" colspan="4"/>
                    <footer>
                        <button string="Confirm" name="create_meeting"
                                type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_meeting_wizard_student"
                    name="Meeting"
                    res_model="op.meeting.wizard"
                    binding_model="op.student"
                    binding_views="list"
                    view_mode="form"
                    target="new"/>


        <act_window id="action_meeting_faculty"
                    name="Meeting"
                    res_model="op.meeting.wizard"
                    binding_model="op.faculty"
                    binding_views="list"
                    view_mode="form"
                    target="new"/>

        <act_window id="action_meeting_parent"
                    name="Meeting"
                    res_model="op.meeting.wizard"
                    binding_model="op.parent"
                    binding_views="list"
                    view_mode="form"
                    target="new"/>
    </data>
</odoo>
