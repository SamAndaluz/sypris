<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_library" name="Portal My Home  Core Details" inherit_id="portal.portal_my_home"
              priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="user_id.sudo().is_parent or user_id.sudo().is_student" t-call="portal.portal_docs_entry">
                <t t-set="title">Meeting Details</t>
                <t t-set="url" t-value="'/meeting/information/'"/>
            </t>
        </xpath>
    </template>

    <template id="openeducat_meeting_portal">

        <t t-call="portal.portal_layout">

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Meeting Information</t>
            </t>
            <t t-if="not meeting_ids">
                <p>There are currently no information for your account!!!</p>
            </t>

            <div t-if="meeting_ids" style="background-color:white; padding: 20px 40px 20px 40px;">

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Attendance</th>
                            <th>Location</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="meeting_ids" t-foreach="meeting_ids" t-as="meeting">
                            <tr>
                                <td>
                                    <a t-attf-href="/meeting/information/#{meeting.id}">
                                        <span t-esc="meeting.name"/>
                                    </a>
                                </td>
                                <td>
                                    <span t-esc="meeting.start" t-options="{'widget': 'datetime'}"/>
                                </td>
                                <td>
                                    <span t-esc="meeting.stop" t-options="{'widget': 'datetime'}"/>
                                </td>
                                <td>
                                    <span t-esc="meeting.partner_ids.name"/>
                                </td>
                                <td>
                                    <span t-esc="meeting.location"/>
                                </td>
                                <td>
                                    <span t-esc="meeting.duration" t-options="{'widget': 'float_time'}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="openeducat_meeting_portal_data">
        <t t-call="portal.portal_layout">

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Meeting Data Information</t>
            </t>
            <t t-if="not meeting_ids">
                <p>There are currently no information for your account!!!</p>
            </t>

            <t t-if="meeting_ids" t-foreach="meeting_ids" t-as="meeting_data">
                <div style="background-color:white; padding: 20px 40px 20px 40px;">
                    <div class="mt16">
                        <div t-if="meeting_data.name" class="row col-md-12">
                            <div class="col-md-2">
                                <strong>Meeting Subject:</strong>
                            </div>
                            <div class="col-md-10" >
                                <span t-esc="meeting_data.name"/>
                            </div>
                        </div>
                        <div t-if="meeting_data.partner_ids.name" class="row col-md-12">
                            <div class="col-md-2">
                                <strong>Attendance:</strong>
                            </div>
                            <div class="col-md-10" >
                                <span t-esc="meeting_data.partner_ids.name"/>
                            </div>
                        </div>
                        <div class="row mt16 col-md-12">
                            <div class="col-md-6">
                                <h4>Meeting-Deatils</h4>
                                <div class="row">
                                    <div t-if="meeting_data.duration" class="col-md-4">
                                        <strong>Duration:</strong>
                                    </div>
                                    <div t-if="meeting_data.duration" class="col-md-8">
                                        <span t-esc="meeting_data.duration" t-options="{'widget': 'float_time'}"/>
                                    </div>
                                    <div t-if="meeting_data.start" class="col-md-4">
                                        <strong>Starting at:</strong>
                                    </div>
                                    <div t-if="meeting_data.start" class="col-md-8">
                                        <span t-esc="meeting_data.start" t-options="{'widget': 'datetime'}"/>
                                    </div>
                                    <div t-if="meeting_data.description" class="col-md-4">
                                        <strong>Description:</strong>
                                    </div>
                                    <div t-if="meeting_data.description" class="col-md-8">
                                        <span t-esc="meeting_data.description"/>
                                    </div>
                                    <div t-if="meeting_data.location" class="col-md-4">
                                        <strong>Location:</strong>
                                    </div>
                                    <div t-if="meeting_data.location" class="col-md-8">
                                        <span t-esc="meeting_data.location"/>
                                    </div>
                                    <div t-if="meeting_data.allday" class="col-md-4">
                                        <strong>All Day:</strong>
                                    </div>
                                    <div t-if="meeting_data.allday" class="col-md-8">
                                        <span t-esc="meeting_data.allday"/>
                                    </div>
                                    <div t-if="meeting_data.alarm_ids.name" class="col-md-4">
                                        <strong>Reminders:</strong>
                                    </div>
                                    <div t-if="meeting_data.alarm_ids.name" class="col-md-8">
                                        <span t-esc="meeting_data.alarm_ids.name"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4>Options</h4>
                                <div class="row">
                                    <div t-if="meeting_data.privacy" class="col-md-4">
                                        <strong>Privacy:</strong>
                                    </div>
                                    <div t-if="meeting_data.privacy" class="col-md-8">
                                        <span t-esc="meeting_data.privacy"/>
                                    </div>
                                    <div t-if="meeting_data.show_as" class="col-md-4">
                                        <strong>Show Time as:</strong>
                                    </div>
                                    <div t-if="meeting_data.show_as" class="col-md-8">
                                        <span t-esc="meeting_data.show_as"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>